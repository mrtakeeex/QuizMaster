<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.bme.aut.quizmaster">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartActivity"
            android:label="Quiz Master"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayerMainActivity"
            android:label="Available rooms"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QuizMasterMainActivity"
            android:label="Lobby"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QuizMasterSettingsActivity"
            android:label="Quiz settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DialogPlayerInit"
            android:label="Add a nickname"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".QuizMasterGameActivity"
            android:label="Game"
            android:screenOrientation="portrait" />
    </application>

</manifest>